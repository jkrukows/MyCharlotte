<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hscreen"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".HomeScreen">

    <TextView
        android:id="@+id/TextView2"
        android:layout_width="319dp"
        android:layout_height="111dp"
        android:fontFamily="@font/sanchez"
        android:text="@string/homepage"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="43.5sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.246"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.087" />

    <Button
        android:id="@+id/button"
        android:layout_width="171dp"
        android:layout_height="72dp"
        android:background="@drawable/homebutton"
        android:fontFamily="@font/sanchez"
        android:text="@string/first_button"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/TextView2"
        app:layout_constraintVertical_bias="0.082" />

    <Button
        android:id="@+id/button2"
        android:layout_width="171dp"
        android:layout_height="72dp"
        android:layout_marginBottom="176dp"
        android:background="@drawable/homebutton"
        android:fontFamily="@font/sanchez"
        android:onClick="sendMap"
        android:text="@string/second_button"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button"
        app:layout_constraintVertical_bias="0.38" />

    <Button
        android:id="@+id/button3"
        android:layout_width="171dp"
        android:layout_height="72dp"
        android:background="@drawable/homebutton"
        android:fontFamily="@font/sanchez"
        android:text="@string/third_button"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button2"
        app:layout_constraintVertical_bias="0.083" />

    <Button
        android:id="@+id/button4"
        android:layout_width="171dp"
        android:layout_height="72dp"
        android:background="@drawable/homebutton"
        android:fontFamily="@font/sanchez"
        android:text="@string/fourth_button"
        android:onClick = "send_CityInfo"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button3"
        app:layout_constraintVertical_bias="0.304" />

</android.support.constraint.ConstraintLayout>




